@page "/"
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager Navigation
@attribute [Authorize]

<div class="card-body" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; background-image: linear-gradient(to right, #00b09b, #96c93d); margin-right:10px; margin-left:10px">
    <h6 class="text-center" style="color:white">Välkommen till Theos Tips App</h6>
    <br />

    <div class="text-center">
  
    <button class="btn btn-light" @onclick="ToTheGrupper">Visa mig grupperna!</button>
  

    </div>
    <br />
    <div class="text-center">

    
        <button class="btn btn-light" @onclick="ToTheTipps">Ta mig till tipset!</button>

    </div>

</div>

@code{

    private void ToTheTipps()
    {
        Navigation.NavigateTo("/TippaHär");
    }
    private void ToTheGrupper()
    {
        Navigation.NavigateTo("/Grupper");
    }
    
}
